page{
  background-color: #8395a7;
}

.recruit-item {
  margin: 20rpx 20rpx;
  border-radius: 20rpx;
  background-color: #c8d6e5;
}

.recruit-item:active {
  top: 5rpx;
  left: 5rpx;
}

.ripple {
    position: relative;
    overflow: hidden;
}

.ripple:after{
    content: '';
    position: absolute;
    width: 100%;
    padding-top: 100%;
    background: transparent;
    border-radius: 50%;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%)
}

@keyframes ripple{
    from {
        transform:translate(-50%,-50%) scale(0);
        background: rgba(0,0,0,.25);
    }
    to {
        transform:translate(-50%,-50%) scale(1);
        background: transparent;
    }
}

.ripple:active:after{
  animation: ripple 1s;
}
