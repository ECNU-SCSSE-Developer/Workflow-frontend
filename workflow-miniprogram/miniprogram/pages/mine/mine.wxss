/* pages/mine/mine.wxss */

.card {
  display: flex;
  flex-direction: row;
  background-color: white;
  margin-bottom: 40rpx;
  padding: 40rpx 40rpx;
}

.msgbox {
  border-left: 10rpx solid #4a69bd;
  display: flex;
  flex-direction: row;
  background-color: white;
  padding: 20rpx 20rpx;
}

.msgbox_in_img {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  display: flex;
  overflow: hidden;
  text-align: center;
  margin: 0 auto;
}

.msg_right {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.msgbox_in_text_title {
  font-size: 40rpx;
}

.msgbox_in_text_desc {
  font-size: 25rpx;
  color: grey;
}

.info-module {
  margin: 40rpx auto;
  display: flex;
  flex-direction: row;
  background-color: white;
  height: 150rpx;
  align-items: center;
}

.info-module-detail {
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: space-around;
  display: flex;
  flex-direction: column;
}

.info-module-img {
  width: 70rpx;
  height: 70rpx;
}

.info-module-text {
  margin-top: 20rpx;
  font-size: 25rpx;
}

.notify:active {
  background-color: gainsboro;
}

.notify_img {
  margin: 0 20rpx;
  width: 30rpx;
  height: 30rpx;
}

.notify_text {
  display: inline;
  font-size: 30rpx;
}

.list {
  position: static;
  line-height: 20px;
  background-color: white;
}

.list_item {
  display: flex;
  position: static;
  flex-direction: row;
}

.list_item_text {
  text-align: left;
  font-size: 16px;
  line-height: 17px;
  padding: 23px 0;
  width: 75%;
}

.list_item_img {
  margin: 10px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.weui-cell__ft{
  color: #4a69bd;
}