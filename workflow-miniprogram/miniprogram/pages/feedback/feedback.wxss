/* pages/feedback/feedback.wxss */
.weui-cells__title{
  margin-top: 200rpx;
  margin-left: 50rpx;
}

.card{
  height: 400rpx;
  width: 80%;
  margin: 20rpx auto;
  padding: 20rpx;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  transition: 0.3s;
  border-radius: 5px;
  margin-bottom: 20rpx
}

.card:hover{
  box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
}

.footer{
  margin-top: 50rpx;
  width: 80%;
  margin-left: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.footer-img{
  margin: 0 20rpx;
  height: 50rpx;
  width: 50rpx;
}