.page-swiper{
  z-index: 999;
  width: 100%;
  height: 500rpx;
}

.slide-image{
  width: 100%;
  height: 100%;
}

swiper {
  width: 100%;
  height: 100%;
}

.match-item{
  border-left: 20rpx solid #4a69bd;
  display: flex;
  flex-direction: row;
  margin: 20rpx 50rpx;
  border-radius: 20rpx;
  align-items: center;
  background-color: white;
  box-shadow: 0 4px 8px 0 rgba(74, 105, 189, 0.2);
}

.match-text{
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.match-item:active {
  top: 5rpx;
  left: 5rpx;
}

.match-img{
  width: 150rpx;
  height: 100rpx;
}

.text-title{
  font-size: 40rpx;
}

.text-time{
  color: grey;
  font-size: 35rpx;
}

.match-img-out{
  margin: 0 20rpx;
}